<div id="pageTitle">
	<h1>Edit <%%=@<%=name.downcase%>.<%=attributes[0]%>%></h1>
</div>

<div id="toolbar">
  <div id="row">
    <div id="leftItem" class="backButton"><%%=link_to "Cancel", :action => :show, :id => @<%=name.downcase%>.object%></div>
    <div id="rightItem" class="regularButton"><%%=link_to "Delete", :action => :delete, :id => @<%=name.downcase%>.object%></div>
  </div>
</div>

<div id="content">
    <form title="Edit <%= class_name %>"
          id="<%= name.downcase %>_edit_form"
          method="POST"
          action="<%%=url_for(:action => :update)%>">
            <input type="hidden" name="id" value="<%%=@<%= name.downcase %>.object%>"/>
            <ul>
                <% attributes.each do |attribute| %>
                <li>
                    <label for="<%= name.downcase %>[<%= attribute %>]" class="fieldLabel"><%=humanize(attribute)%></label>
                    <input type="text" name="<%= name.downcase %>[<%= attribute %>]" value="<%%=@<%=name.downcase%>.<%=attribute%>%>" <%%= placeholder( "<%=humanize(attribute)%>" )%> />
                </li>
                <% end %>
            </ul>
            <button class="standardButton" type="submit">Update</button>
    </form>
</div>