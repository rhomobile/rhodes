<div id="pageTitle">
	<h1>Edit <%%=@<%=name.downcase%>.<%=attributes[0]%>%></h1>
</div>

<div id="toolbar">
  <div id="row">
    <div id="leftItem" class="backButton"><%%=link_to "Cancel", :action => :show%></div>
    <div id="rightItem" class="regularButton"><%%=link_to "Delete", :action => :delete, :id => @<%=name.downcase%>.object%></div>
  </div>
</div>

<div id="content">
    <form title="Edit <%= class_name %>"
          id="<%= name.downcase %>_edit_form"
          method="POST"
          action="<%%=url_for(:action => :update)%>">
        <fieldset>
            <input type="hidden" name="id" value="<%%=@<%= name.downcase %>.object%>"/>
            <div class="form_list">
                <ul>
                    <% attributes.each do |attribute| %>
                    <li>
                        <span class="label"><%=humanize(attribute)%></span>
                        <input type="text" name="<%= name.downcase %>[<%= attribute %>]" value="<%%=@<%=name.downcase%>.<%=attribute%>%>"/>
                    </li>
                    <% end %>
                </ul>
            </div>
        </fieldset>

        <button class="updateButton" type="submit">Update</button>
    </form>
</div>