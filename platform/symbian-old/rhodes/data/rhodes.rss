			control = AVKON_HEADING
				{
					label="Logging Settings";
				};
			},
		DLG_LINE
		 {
		 id = EMessageClassesLabel;
		 type = EEikCtLabel;
		 control = LABEL
			{
			standard_font=EikLabelUnderline;
			horiz_align=EEikLabelAlignHLeft;
			txt = "Message classes(* for all):";
			};
		 },		
		DLG_LINE
			{
			type = EEikCtEdwin; 
			id = EMessageClassesId;
			control=EDWIN
