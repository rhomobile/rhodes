		DLG_LINE
			{
			id = EExcludeMessageClassesLabel;
			type = EEikCtLabel;
			control = LABEL
				{
				standard_font=EikLabelUnderline;
				horiz_align=EEikLabelAlignHLeft;
				txt = "Exclude message classes:";
				};
			 },		
		DLG_LINE
			{
			type = EEikCtEdwin; 
			id = EExcludeMessageClassesId;
			control=EDWIN
				{
				flags = EAknEditorFlagDefault;
				width = 240;
				}; 
			},
		DLG_LINE
		 {
		 id = EMessageLoggingLeveleLabel;
		 type = EEikCtLabel;
		 control = LABEL
			{
			standard_font=EikLabelUnderline;
			horiz_align=EEikLabelAlignHLeft;
			txt = "Logging Level:";
			};
		 },
		 DLG_LINE
			{
			type = EEikCtListBox;
			id = ELogLevelChoiceListId;
			control = LISTBOX
				{
				flags = EAknListBoxSelectionList;
				height=4;
				array_id = r_array_logging_level;
				};
			},
		DLG_LINE
			{
			type = EAknCtMessageQuery;
			id = EAknMessageQueryContentId;
			control = AVKON_MESSAGE_QUERY
				{
				};
			}					
		};
