        <mkdir dir="${bin.dir}"/>

        <echo message="Cleaning up dirs..."/>
        <delete dir="${bin.dir}"/>
        <delete dir="${build.target}"/>
        <delete dir="${dir.sis}" includes="*.sis, *.SIS, *.sisx, *.rnd" />
        
        <mkdir dir="${bin.dir}"/>
        <mkdir dir="${dir.output}"/>

    </target>

