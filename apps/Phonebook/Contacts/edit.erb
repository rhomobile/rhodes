<form title="Edit Contact" 
	  class="panel" 
	  id="contact_edit_form" 
	  method="POST" 
	  action="<%=url_for('update')%>">
	<fieldset>
		<input type="hidden" name="contact[id]" value="<%=@contact['id']%>"/>
		<div class="row">
			<label>First Name: </label>
			<input type="text" name="contact[first_name]" value="<%=@contact['first_name']%>"/>
		</div>
		<div class="row">
			<label>Last Name: </label>
			<input type="text" name="contact[last_name]" value="<%=@contact['last_name']%>"/>
		</div>
		<div class="row">
			<label>Company: </label>
			<input type="text" name="contact[company_name]" value="<%=@contact['company_name']%>"/>
		</div>
		<div class="row">
			<label>Mobile #: </label>
			<input type="text" name="contact[mobile_number]" value="<%=@contact['mobile_number']%>"/>
		</div>
		<div class="row">
			<label>Home #: </label>
			<input type="text" name="contact[home_number]" value="<%=@contact['home_number']%>"/>
		</div>
		<div class="row">
			<label>Business #: </label>
			<input type="text" name="contact[business_number]" value="<%=@contact['business_number']%>"/>
		</div>
		<div class="row">
			<label>Email: </label>
			<input type="text" name="contact[email_address]" value="<%=@contact['email_address']%>"/>
		</div>
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for('delete', @contact['id'])%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>
